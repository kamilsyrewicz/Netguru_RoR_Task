<div class="container">
  <h1 class="mb-4">Create a quote</h1>

  <form method="POST" action="/">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <textarea rows="20" class="form-control" name="body"></textarea>
    <input class="btn btn-primary my-3 float-right" type="submit" value="Add quote" />
  </form>
</div>